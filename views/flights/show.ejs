<%- include('../partials/header') %>

  <h3>Departure</h3>
  <section id="show-page">
    <div>Airline: </div>
    <div>
      <%= flight.airline %>
    </div>
    <div>Flight No: </div>
    <div>
      <%= flight.flightNo %>
    </div>
    <div>Airport: </div>
    <div>
      <%= flight.airport %>
    </div>
    <div>Depart Date: </div>
    <div <% if (flight.toObject({ getters: false }).departs < new Date().getTime()) { %>style="color: red;"<% } %>>
        <%= flight.departs %>
    </div>
  </section>

  <br>
  <h3>Destinations</h3>
  <form action="/flights/<%= flight.id %>/destinations" method="POST" autocomplete="off">
    <label>Airport:</label>
    <select name="airport">
      <% availableDestinations.forEach(function(d) { %>
        <option value="<%= d %>"><%= d %></option>
      <% }) %>
    </select>
    <label>Arrival Date:</label>
    <input type="datetime-local" name="arrival">
    <div>
      <%= flight.arrival %>
    </div>
    <button type="submit">Add Destination</button>
  </form>
  <!-- // Create a list of destinations here -->
  <% if (sortedDestinations.length) { %>
    <table>
      <thead>
        <tr>
          <th>Airport</th>
          <th>Arrival Date</th>
        </tr>
      </thead>
      <tbody>
        <% flight.destinations.forEach(function(r) { %>
          <tr>
            <td>
              <%= r.airport %>
            </td>
           <td>
            <%= r.arrival %>
           </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
    <% } else { %>
      <h5>No Reviews Yet</h5>
      <% } %>

  <!-- new markup below -->
  <br><br>
  <h2>Reviews</h2>
  <form id="add-review-form" method="POST" action="/flights/<%= flight._id %>/reviews">
    <label>Review:</label>
    <textarea name="content"></textarea>
    <label>Rating:</label>
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5" selected>5</option>
    </select>
    <input type="submit" value="Add Review">
  </form>

  <!-- // Create a list of reviews here -->
  <% if (flight.reviews.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Review</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% flight.reviews.forEach(function(r) { %>
          <tr>
            <td>
              <%= r.createdAt.toLocaleDateString() %>
            </td>
            <td>
              <%= r.content %>
            </td>
            <td>
              <%= r.rating %>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
    <% } else { %>
      <h5>No Reviews Yet</h5>
      <% } %>
        <%- include('../partials/footer') %>